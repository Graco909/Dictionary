<Window x:Class="Dictionary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dictionary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500"
        ResizeMode="NoResize">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="#FF551384" Offset="1"/>
            <GradientStop Color="#FF066D6F" Offset="0.35"/>
        </RadialGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/j5eA8qe-_400x400.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="matchingWords" HorizontalAlignment="Center" Margin="0,80,0,0" Width="222" d:ItemsSource="{d:SampleData ItemCount=5}" Height="344" VerticalAlignment="Top" SelectionChanged="matchingWords_SelectionChanged">
            <ListBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </ListBox.Background>
        </ListBox>
        <TextBox x:Name="search_bar" HorizontalAlignment="Center" Height="30" Margin="0,40,0,0" TextWrapping="NoWrap" Text="{Binding wyszukane_slowo}" VerticalAlignment="Top" Width="222" TextChanged="search_bar_TextChanged">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <Label x:Name="search_bar_label" Content="Wyszukaj słowo" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="196" Height="25"/>
        <ListView x:Name="translated_words" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,80,10,0" Height="344" VerticalAlignment="Top" Grid.RowSpan="2">
            <ListView.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </ListView.Background>
        </ListView>
        <Label x:Name="selected_word_and_desc" Content="" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Width="230" FontWeight="Bold" Height="30" Grid.Column="1">
            <Label.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </Label.Background>
        </Label>
    </Grid>
</Window>
